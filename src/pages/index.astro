---
import Layout from '../layouts/Layout.astro'
import ArrowLeftIcon from '@icons/ArrowLeftIcon.astro'
import ArrowRightIcon from '@icons/ArrowRightIcon.astro'
import NotificationIcon from '@icons/NotificationIcon.astro'
import Greetings from '@components/Greetings.astro'
import Suggestions from '@components/Suggestions.astro'
---

<Layout title="Welcome to Astro.">
  <div
    class="absolute inset-0 bg-gradient-to-t from-primary-dark-50 via-primary-dark-100/80"
  >
  </div>

  <header class="z-10">
    <section class="w-full flex justify-between text-light">
      <nav class="flex gap-2">
        <a href="#" class="bg-primary-dark-50 p-2 rounded-full">
          <ArrowLeftIcon />
        </a>

        <a href="#" class="bg-primary-dark-50 p-2 rounded-full">
          <ArrowRightIcon />
        </a>
      </nav>

      <div>
        <button class="bg-primary-dark-50 p-2 rounded-full">
          <NotificationIcon />
        </button>
      </div>
    </section>
  </header>

  <section class="flex flex-col gap-4 z-10">
    <Greetings />
    <Suggestions />
  </section>
</Layout>
