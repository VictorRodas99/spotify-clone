---
import Layout from '../layouts/Layout.astro'
import Greetings from '@components/Greetings.astro'
import Suggestions from '@components/Suggestions.astro'
import Cards from '@components/Cards.astro'
import Title from '@components/CardsTitle.astro'

import { secondSection } from '@lib/suggestions'
import { playlists } from '@lib/playlists'
---

<Layout title="Welcome to Astro.">
  <div
    class="absolute inset-0 h-[300px] bg-gradient-to-t from-primary-dark-100 via-context"
    style=";--context-color:#134e4a;"
  >
  </div>

  <section
    id="greetings-section"
    class="flex flex-col gap-4 transition-all duration-1000 z-10"
  >
    <Greetings />
    <Suggestions />
  </section>

  <div class="mt-5 flex flex-col gap-10">
    <Cards data={secondSection}>
      <Title>Vuelve a tu m√∫sica</Title>
    </Cards>

    <Cards data={playlists}>
      <Title>Tus Playlists</Title>
    </Cards>
  </div>
</Layout>
