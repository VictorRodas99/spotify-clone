---
import type { Playlist } from '@lib/types/playlists'
import { Image } from 'astro:assets'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
---

<li>
  <a
    href={`playlist/${playlist.id}`}
    class="flex gap-3 p-2 hover:bg-primary-dark-50 rounded-md"
  >
    <div>
      <Image
        class="object-cover rounded-md"
        width={50}
        height={50}
        src={playlist.cover}
        alt={`${playlist.title}-playlist-cover`}
      />
    </div>
    <div>
      <h2 class="text-white">{playlist.title}</h2>
      <p>
        {playlist.type} &#903; {playlist.creator}
      </p>
    </div>
  </a>
</li>
